@import "/fonts/iconfont.wxss";
@import "/css/variables.wxss";

page {
  font-size: 32rpx;
  font-family: sans-serif;
  background: #f5f5f5;
  box-sizing: border-box;
  /* IOS底部安全距离 */
  padding-bottom: constant(safe-area-inset-bottom);
  /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom);
  /*兼容 IOS>11.2*/
}

/*共公样式  */
.all_center {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

/* 垂直居中 */
.y_center {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

/* 水平居中 */
.x_center {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

/* flex 布局 */
/* 横轴 */
.flex_r {
  display: flex;
  flex-direction: row;
}

/* 横轴水平居中 */
.flex_r_h {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

/* 横轴垂直居中 */
.flex_r_v {
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 横轴水平垂直居中 */
.flex_r_hv {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/* 纵轴 */
.flex_c {
  display: flex;
  flex-direction: column;
}

/* 纵轴水平 */
.flex_c_h {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 纵轴垂直 */
.flex_c_v {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 纵轴水平垂直 */
.flex_c_hv {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


/* 1px  */
.scale-1px {
  position: relative;
  border: none;
}

.scale-1px:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  background: var(--border-color);
  width: 100%;
  height: 1px;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}

/* 单行超出省略;  */
.ellipsis_1 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.ellipsis_2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.huanhang {
  display: block;
  word-break: break-all;
  overflow-wrap: break-word;
}

/* 底部占位 */
.tabbar-fit-box {
  height: var(--tabbar-height);
}

/* 客服按钮 */
.contactButton {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

/* 按钮 */
.custom-btn-container {
  width: 80%;
  margin: 20rpx auto;
}

.submit {
  --button-normal-font-size: 32rpx;
  --button-default-height: 80rpx;
  width: 100%;
}

/* 布局通用样式 */
.container {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box;
}

.scroll {
  flex: 1;
  overflow: hidden;
}

/* 弹出选择 样式覆盖 */
.van-action-sheet__cancel,
.van-action-sheet__item {
  padding: 20rpx 30rpx !important
}